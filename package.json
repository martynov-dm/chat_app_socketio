    "@emotion/babel-plugin": "^11.1.2",
    "@emotion/core": "^11.0.0",
    "@hapi/joi": "^17.1.1",
    "@types/compression": "^1.7.0",
    "autoprefixer": "^9",
    "axios": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.23.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "datauri": "^3.0.0",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi-image-extension": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
