{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./server",
    "outDir": "./server/build",
    "sourceMap": true,
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    /* Module Resolution Options */
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },

  "exclude": ["client/**/*", "server/build/**", "node_modules"]
}
